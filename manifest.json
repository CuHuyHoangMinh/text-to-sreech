
  "manifest_version": 2,

  "name": "Text to Screech",
  "description": "covert.Highlight text and click the extension's icon",
  "author": "",
  "version": "0.0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [ "content.js"],
      "run_at": "document_end"
    }],
  "browser_action": {
    "default_icon": "speech.png"
  },
  "icons": { "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },
    "permissions": [
      "activeTab",
      "clipboardRead"
    ]
}
